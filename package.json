{
  "name": "react-enterprise-recaptcha",
  "version": "1.0.4",
  "description": "A lightweight React wrapper for reCAPTCHA Enterprise with a next-recaptcha-v3â€“compatible API. Pure client-side, framework-agnostic.",
  "license": "MIT",
  "author": "Shinichiro Takezaki",
  "homepage": "https://www.npmjs.com/package/react-enterprise-recaptcha",
  "repository": {
    "type": "git",
    "url": "https://github.com/takezaki/react-enterprise-recaptcha.git"
  },
  "bugs": {
    "url": "https://github.com/takezaki/react-enterprise-recaptcha/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,

  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "peerDependenciesMeta": {
    "react-dom": { "optional": true }
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },

  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --clean --external react --external react-dom",
    "dev": "tsup src/index.tsx --format esm,cjs --dts --watch --external react --external react-dom",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "recaptcha",
    "recaptcha-enterprise",
    "react",
    "captcha",
    "next-recaptcha-v3",
    "enterprise"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
